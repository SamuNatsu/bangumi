---
import { SITE_DESCRIPTION, SITE_NAME } from "@/constants";

// Layouts
import Layout from "@/layouts/BaseLayout.astro";

// Components
import { Icon } from "astro-icon/components";
---

<Layout>
  <!-- Title slot -->
  <title slot="head-title">{SITE_NAME}</title>

  <!-- Metadata -->
  <Fragment slot="head-metas">
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta name="og:title" content={SITE_NAME} />
    <meta name="og:type" content="website" />
    <meta name="og:url" content={Astro.url} />
    <meta name="og:description" content={SITE_DESCRIPTION} />
    <meta name="og:locale" content="zh-CN" />
    <meta name="og:site_name" content={SITE_NAME} />
  </Fragment>

  <main class="px-4">
    <h2 class="flex font-bold gap-2 items-center my-4 text-2xl">关于</h2>
    <p class="text-center my-12 text-2xl">To Be Done</p>
  </main>
</Layout>
